<!-- views/display.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Display Users</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Custom Styles -->
  <style>
    .table {
      /* Styling for the table */
      border-radius: 10px;
      overflow: hidden; /* To keep rounded corners when using border */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn {
      border-radius: 5px;
      transition: all 0.3s;
    }
    .btn:hover {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2>All Users</h2>
    <!-- Users Table -->
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Gender</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% user_array.forEach(user => { %>
          <tr>
            <td><%= user.userName %></td>
            <td><%= user.userEmail %></td>
            <td><%= user.userGender %></td>
            <td>
              <!-- Actions for Show, Edit, Delete -->
              <a href="/show/<%= user._id %>" class="btn btn-info">Show</a>
              <a href="/edit/<%= user._id %>" class="btn btn-warning">Edit</a>
              <!-- Confirm before deleting -->
              <form action="/delete/<%= user._id %>" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
